extends ../layout

block content
  .d
    .bg-light.border-right.dashboard_sidebar
      .list-group.list-group-flush
        h2.list-group-item.list-group-item-action.bg-light #{seller.name} 
        h5.list-group-item.list-group-item-action.bg-light #{seller.location}
        h6.list-group-item.list-group-item-action.bg-light #{seller.email}
        h6.list-group-item.list-group-item-action.bg-light #{seller.phone_number}
        .list-group-item.list-group-item-action.bg-light(style='padding: 15px 5px; text-align: center')
          a.additem_link(href='./add') Add Item
          a.editseller_link(href='/users/edit/'+seller._id) Edit your info
      
    .dashboarditems_wrapper
      h3(style='margin: 0 auto 35px 50px;') Your items
      if items.length != 0
        .row
          each item in items
            .col-xl-4.col-lg-6
              .dashboarditems_list
                .dashboarditems_image
                .dashboarditems_info
                  p.dashboard_title= item.title
                  p.dashboard_price= item.price
                  p.dashboard_description= item.description 
                .dashboarditems_bar
                  .row
                    a(href='./edit/'+item._id).col-sm-6.dashboard_link Edit
                    a(href='./remove/'+item._id).col-sm-6.dashboard_link Remove
      else
        p.noItemsDashboard You have no items for rent yet
