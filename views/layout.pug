doctype html
html
  head
    title= title
    link(rel="stylesheet" href="/bootstrap/css/bootstrap.css" )
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(href="https://fonts.googleapis.com/css?family=Open+Sans|Playfair+Display" rel="stylesheet")
    link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/style.css')
    
        
  body(style='padding: 0px')
    nav.navbar.navbar-expand-md.bg-light(style='font-family: "Open Sans", arial, sans-serif;')
      a.navbar-brand(href='/') the.opencloset
      button.navbar-toggler.navbar-light(type='button', data-toggle='collapse', data-target='#collapsibleNavbar')
        span.navbar-toggler-icon
      #collapsibleNavbar.collapse.navbar-collapse
        ul.navbar-nav
          li.nav-item
            a.nav-link(href='/') Home
        ul.navbar-nav.ml-md-auto
          if user
            if !user.seller_status
              li.nav-item
                a.nav-link(href='/seller') Become a Seller
            else
              li.nav-item
                a.nav-link(href='/seller/dashboard') Dashboard
            li.nav-item
              a.nav-link(href='/users/'+user._id)
                i.fas.fa-user-circle.fa-lg
            li.nav-item
              a.nav-link(href='/users/logout') Logout
          else  
              a.nav-link(href='/users/login') Login
          li.nav-item
            a.nav-link(href='/about_us') about us

            
    .container#errormsgscontainer(style={'position': 'absolute', 'z-index': '100', 'right': '50px', 'max-width': '250px'})
      != messages('message', locals)
      if errors
        each error, i in errors
          div(class='alert alert-danger') #{error.msg}
    block content
    hr(style='margin-top: 0')
    footer
      p(style={'text-align': 'center'}) Copyright &copy; the.opencloset - all rights reserved

  script(src="/jquery/jquery.js")
  script(src="/bootstrap/js/bootstrap.js")
  script(src="/javascripts/delete.js")
  script(src="/javascripts/password.js")
  script(src="/javascripts/main_styling.js")
  script(src="/javascripts/item_styling.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.jquery.min.js")
  script(defer src="https://use.fontawesome.com/releases/v5.0.9/js/all.js" integrity="sha384-8iPTk2s/jMVj81dnzb/iFR2sdA7u06vHJyyLlAd4snFpCl/SnyUjRrbdJsw1pGIl" crossorigin="anonymous")
